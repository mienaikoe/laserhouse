{
  "name": "laserhouse",
  "version": "1.0.0",
  "description": "an app for building a scale model with a lasercutter",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "parallelshell \"npm run dev-client\" \"npm run dev-server\"",
    "start": "node server server/index.js",
    "dev-client": "nodemon --ignore client/bundle.js --exec \"npm run build-client\" client/index.js",
    "dev-server": "nodemon server/index.js",
    "build-client": "browserify --transform [ sveltify --extensions [.htmlz .svelte] ] client/index.js --outfile client/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mienaikoe/laserhouse.git"
  },
  "author": "Jesse Lee (mienaikoe)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mienaikoe/laserhouse/issues"
  },
  "homepage": "https://github.com/mienaikoe/laserhouse#readme",
  "dependencies": {
    "http": "^0.0.1-security",
    "makerjs": "^0.18.1",
    "svelte": "^5.36.17"
  },
  "devDependencies": {
    "browserify": "^17.0.1",
    "nodemon": "^3.1.10",
    "parallelshell": "^3.0.1",
    "sveltify": "^3.0.0"
  }
}
